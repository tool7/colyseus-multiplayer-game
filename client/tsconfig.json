{
  "compilerOptions": {
    "strict": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["DOM", "ES2020"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
